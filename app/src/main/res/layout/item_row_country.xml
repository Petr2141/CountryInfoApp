<?xml version="1.0" encoding="utf-8"?>
<!--TODO all dp's move to style-->
<!--TODO use include/merge for boilerplate code like dividers and | -->
<!-- https://developer.android.com/develop/ui/views/layout/improving-layouts/reusing-layouts -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:showDividers="middle"
    android:divider="@drawable/sh_row_item_transparent_divider">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="none"
        android:text="@string/long_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/border_separator"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/border_separator"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_country_r_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/border_separator_r_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_item_country_r_divider"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="&quot;name&quot;" />

        <TextView
            android:id="@+id/tv_item_country_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_item_country_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text=" ,&quot;region&quot;" />

        <TextView
            android:id="@+id/tv_item_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_item_country_region"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="&quot;code&quot;" />

        <TextView
            android:id="@+id/tv_item_country_l_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/border_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/border_separator"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/border_separator"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_country_r_divider_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/border_separator_r_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_country_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_item_country_r_divider_capital"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="&quot;capital&quot;" />

        <TextView
            android:id="@+id/tv_item_country_l_divider_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/border_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/border_separator"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/border_separator"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="none"
        android:text="@string/long_divider"/>

</LinearLayout>